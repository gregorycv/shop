{
  "compilerOptions": {
    "baseUrl": "./src/server.ts",
    "target": "ES6",
    "module": "commonjs",
    "outDir": "build",
    "lib": ["ES6"],
    "esModuleInterop": true,
    // type checking
    "strict": true,
    "noImplicitAny": true
  },

  "include": ["server.ts", "src/**/*"],
  "exclude": ["node_modules"]
}